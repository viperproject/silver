method test07a(xs: Seq[Ref]) {
  inhale (forall x: Int :: x in [0..|xs|) ==> acc(xs[x].f))

  inhale (forall x: Int :: {xs[x].f} (0 <= x) && (x < |xs|) ==> (xs[x].f == 0))
  assert (forall x: Int :: {xs[x].f} (0 <= x) && (x < |xs|) ==> (xs[x].f == 0))
}

