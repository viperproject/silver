function countFalseX(a: Array, from: Int): Int
  requires 0 <= from && from <= length(a);
  requires forall z: Int :: (from <= z && z < length(a) ==> acc(loc(a,z).val));
{
  from == length(a) ? 0 : countFalseX(a, from+1)
}

method lemmaFrontX(a: Array, from: Int)
  requires 0 <= from && from <= length(a);
  requires forall z: Int :: (from <= z && z < length(a) ==> acc(loc(a,z).val));
{
  assert
    countFalseX(a, from)
      ==
    (from == length(a) ? 0 : countFalseX(a, from+1));
}

