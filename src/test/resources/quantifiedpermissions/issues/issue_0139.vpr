field f: Int
field g: Int

function fun01(xs: Seq[Ref]): Int
  requires |xs| > 10
  requires forall k: Int :: 0 <= k && k < 3 ==> acc(xs[k].f)

method test01(xs: Seq[Ref]) {
  inhale |xs| > 10
  inhale forall k: Int :: 0 <= k && k < 3 ==> acc(xs[k].f)

  inhale 10 == fun01(xs)
  assert 10 == fun01(xs)

  //:: ExpectedOutput(assert.failed:assertion.false)
  assert false
}

