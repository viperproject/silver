  ensures (forall i: Int :: (0 <= i) && (i < len) ==> acc(a[i].Ref__Integer_value, write))
  ensures (forall i: Int :: (0 <= i) && (i < len) ==> (a[i].Ref__Integer_value == old(a[i].Ref__Integer_value)))
{
