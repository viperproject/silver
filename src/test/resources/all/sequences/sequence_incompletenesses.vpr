        assert valid(oldSoln,n-1,false)
        //:: UnexpectedOutput(assert.failed:assertion.false, /silicon/issue/380/)
        assert valid(soln,n,true)
      }
      slot(a,n).val := slot(a,n).val ++ Seq(soln)
      i := i + 1
    }

    n := n + 1
  }


}
