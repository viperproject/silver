//:: IgnoreFile(/Carbon/issue/243/)
field f: Int
field g: Int

method m(x: Ref, y: Ref) {
    inhale acc(x.f) --* acc(x.g)
    inhale acc(y.f) --* acc(y.g)

    if (x == y) {
        assert perm(acc(x.f) --* acc(x.g)) == 2 * write
    } else {
        exhale acc(x.f) --* acc(x.g)
        assert perm(acc(y.f) --* acc(y.g)) == write
    }
}