method test01(xs: Seq[Ref], ys: Seq[Ref])
  requires |xs| == |ys| || |xs| == |ys| + 1
{
  assert
    zip(xs, ys)
      ==
    ((ys == Seq[Ref]())
      ? xs
      : Seq(xs[0], ys[0]) ++ zip(xs[1..], ys[1..]))
}

