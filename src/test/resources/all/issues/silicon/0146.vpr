field f: Int

function idx00(a: Int, b: Int, c: Int, n: Int): Int
  ensures 0 <= result && result < n

method test00(xs: Seq[Int], n: Int) {
  inhale 10 < n
  inhale n <= |xs|

  inhale forall i: Int, j: Int ::
           0 <= i && i < n
        && 0 <= j && j < i
    ==> xs[idx00(i, j, j+1, n)] == i + j

  assert xs[idx00(5, 2, 3, n)] == 7
}
