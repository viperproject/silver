field __CONFIG_HEURISTICS: Bool

field f: Ref

predicate P(x: Ref) { acc(x.f) }
predicate Q(y: Ref) { P(y) }

method test01(z: Ref) {
  inhale true --* P(z)

  fold Q(z)
}

function rcvr(i: Int): Ref

method test02(z: Ref) {
  inhale acc(z.f, 1/2)
  inhale rcvr(0) == z.f
  inhale true --* acc(z.f, 1/2) && acc(z.f.f)

  fold P(rcvr(0))
}

method test03(z: Ref) {
  inhale rcvr(0) == rcvr(1)
  inhale true --* acc(rcvr(0).f)

  fold P(rcvr(1))
}
