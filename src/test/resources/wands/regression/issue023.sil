field f: Int

predicate P(x: Ref) { acc(x.f, 1/3) }
predicate Q(x: Ref) { acc(x.f, 2/3) }

method test01(x: Ref) {
  inhale acc(P(x))
  inhale acc(Q(x))

  package (true) --* acc(x.f) {
      unfold acc(P(x))
      unfold acc(Q(x))
  }
}

method test02(x: Ref) {
  inhale acc(P(x))
  inhale true --* acc(x.f, 2/3)

  package (true) --* acc(x.f) {
      unfold acc(P(x))
      apply true --* acc(x.f, 2/3)
  }
}
