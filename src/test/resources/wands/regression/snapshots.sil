field f: Int
field g: Int
field h: Bool

predicate P(x: Ref) {
  (acc(x.f) && x.f > 0) --* (acc(x.f) && acc(x.g) && ((x.f) + (x.g) > 0))
}

method test01(x: Ref)
  requires acc(x.f) && acc(x.g)
{
  define A acc(x.f) && x.f > 0 --* acc(x.f) && acc(x.g) && x.f + x.g > 0

  x.f := 1
  x.g := 1
  package A
  fold acc(P(x))
  unfold acc(P(x))
  apply A
  assert acc(x.g) && ((x.f) + (x.g) > 0)
  //:: UnexpectedOutput(assert.failed:assertion.false, /carbon/issue/110/)
  assert x.g == 1
}

