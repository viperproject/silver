field f:Ref

predicate P(x:Ref) {
  acc(x.f,1/4)
}

method t01(x:Ref) { 
  package (acc(x.f,1/4)&&acc(P(x.f))) --* acc(x.f,1/4)&&acc(x.f.f,1/4) {
      fold P(x)
      unfold P(x)
      unfold P(x.f)
  }
  
  //:: ExpectedOutput(assert.failed:assertion.false)
  assert false
}

method t02(x:Ref) { 
  package (acc(x.f,1/4)) --* acc(x.f,1/4) {
      fold P(x)
      unfold P(x)
  }
  
  //:: ExpectedOutput(assert.failed:assertion.false)
  assert false
}
