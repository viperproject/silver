field f: Int

predicate Cell(x: Ref) {
    acc(x.f)
}

function get(x: Ref): Int
requires true --* acc(x.f) {
    applying (true --* acc(x.f)) in x.f
}

method test0(x: Ref)
requires acc(x.f)
ensures (true --* acc(x.f)) && (applying (true --* acc(x.f)) in x.f) == old(x.f) {
    package true --* acc(x.f)
}

