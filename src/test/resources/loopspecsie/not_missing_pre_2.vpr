method f(l : Ref)
    requires l != null
   {
   var curr : Ref := l

   var i : Int := 1

   while(curr != null)
       ensures curr != null ==> pre(i) + 1 == i
   {

        curr := null
        i := i + 1

        ghost{
                i := pre(i) + 1
           }
   }
