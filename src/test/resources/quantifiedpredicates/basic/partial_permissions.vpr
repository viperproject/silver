field f: Int

predicate pred(r:Ref) {
	acc(r.f)
}

method t1(r: Ref) returns ()
    requires forall x:Ref :: {pred(x)} true ==> acc(pred(x), wildcard)
{
    t1(r)
    //:: UnexpectedOutput(call.precondition:negative.permission, /silicon/issue/409/)
    t1(r)
}

method t2(r: Ref) returns ()
