method append(this: Ref, e: Int)
    requires list(this)
    ensures list(this)
{
    unfold list(this)
    if (this.next3 == null) {
        var n: Ref
        n := new(elem3, next3)
        n.elem3 := e
        
        n.next3 := null
        this.next3 := n
        fold list(n)
    } else {
        append(this.next3, e)
    }
    fold list(this)
}

