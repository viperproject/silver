method mMethodCallNOK2()
{
    var z: Int
    // This should be OK, since the return value in example2 does not depend on its arguments
    prove forall x:Int {P(x)} assuming P(x) implies Q(x) && z == 0 {
        z := example2(x,x)
    }
}

