function P(x: Int) : Bool {
    x == 0
}

function Q(x: Int) : Bool {
    x == 0
}

method assumeMethodCall1()
{
    prove forall x: Int {P(x)} assuming P(x) implies Q(x) {
        abstractNonTermImpl(10)
        if(x > 0) {
            //:: ExpectedOutput(consistency.error)
            abstractNonTermImpl(10)
        }
        while(x > 0) {
            //:: ExpectedOutput(consistency.error)
            abstractNonTermImpl(10)
        }
    }
}


