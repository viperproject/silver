    prove forall x: Int {P(x)} assuming P(x) implies Q(x) && y.f == x {
        y.f := x
    }
}

method mFieldAssignNOK2(y:Ref)
{
    var w: Int
    //:: ExpectedOutput(consistency.error)
    prove forall x: Int {P(x)} assuming P(x) implies Q(x) && w == x {
