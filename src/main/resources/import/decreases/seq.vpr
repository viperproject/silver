import "declaration.vpr"

domain SeqTerminationOrder[S]{
    //Sequences
    axiom seq_ax_dec{
        forall seq1: Seq[S], seq2: Seq[S] :: {decreasing(seq1,seq2)}
            (|seq1| < |seq2|) ==> decreasing(seq1, seq2)
    }
    axiom seq_ax_bound{
        forall seq1: Seq[S] :: {bounded(seq1)}
            (|seq1| >= 0) ==> bounded(seq1)
    }
}